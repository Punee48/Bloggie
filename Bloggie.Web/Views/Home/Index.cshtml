@model Bloggie.Web.Models.ViewModels.HomeView

@{
    ViewData["Title"] = "Bloggie";
}


<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">Bloggie - The DEV Blog</h1>
            <p class="lead"></p>
                     Bloggie is the gome to coding blogs covering a vast range of like HTML, CSS, JS, ASP.NET, Angular etc want to read the latest dev articles? Join the bloggie app and get weekly blogs in your email       
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/546819/pexels-photo-546819.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Bloggie Image" class="d-block mx-lg-auto img-fluid">
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center mb-2">
        <div class="col-6 d-flex">
            @foreach(var tag in Model.Tags)
            {
                <span class="badge bg-dark me-1">@tag.Name</span>
            }
            
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model != null && Model.BlogPost.Any())
            {
                foreach(var blogPost in Model.BlogPost)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageURL" alt="@blogPost.Heading" class="d-block img-fluid mb-3">
                        <h2 class="mb-2">@blogPost.Heading</h2>

                        <p class="mb-3">
                            @foreach(var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-2">
                            Author: @blogPost.Author <br>
                            Published: @blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-5">
                            @blogPost.ShortDescription
                        </p>

                        <a asp-area="" asp-controller="Blogs" asp-route-urlHandle="@blogPost.UrlHandle" class="btn btn-dark">Read More...</a>
                    </div>
                }
            }
        </div>
    </div>
</div>