@model Bloggie.Web.EditTagRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit the Blog Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id = "Id" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id = "name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id = "displayName" asp-for="DisplayName"  />
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-dark">UPDATE TAG</button>
            <button type="submit" class="btn btn-danger ms-3" asp-area="" asp-controller="AddTags" asp-action="Delete"> DELETE</button>
        </div>      


    </form>
</div>
